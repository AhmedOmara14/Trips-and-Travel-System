                                            <a class="dropdown-item" href="Profile">Profile</a>
                                        </div>
                                    </li>
                                </ul>
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex" href="LogOut">
                                            <i class="far fa-user mr-2 tm-logout-icon"></i>
                                            <span>Logout</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>

                @********@

                <table class="table table-light" style="padding: 20px 10px;">

                    <tr style="padding: 10px;">
                        <th>Id</th>
                        <th>Agency Name</th>
                        <th>Trip Title</th>
                        <th>Trip Description</th>
                        <th>Trip Date</th>
                        <th>Trip Destination</th>
                        <th></th>

                    </tr>
                    @foreach (var post in Model)
                    {
                        <form action="accept" method="post">
                            <tr style="padding: 10px;">
                                <td>
                                    <input size="3px" id="id" value="@post.id" readonly="readonly" name="id" type="text">

                                </td>
                                <td>
                                    <input size="10px" id="agencyname" value="@post.agencyname" readonly="readonly" name="agencyname" type="text">
                                </td>
                                <td>
                                    <input size="10px" id="triptitle" value="@post.triptitle" readonly="readonly" name="triptitle" type="text">
                                </td>
                                <td><input id="tripdesctiption" value="@post.tripdesctiption" readonly="readonly" name="tripdesctiption" type="text"></td>
                                <td><input id="tripdate" value="@post.tripdate" name="tripdate" readonly="readonly" type="text"></td>
                                <td><input id="tripdestination" value="@post.tripdestination" readonly="readonly" name="tripdestination" type="text"></td>
                                <td><input type="submit" value="Accept" class="btn btn-success btn-sm" readonly="readonly" /></td>

                                <td class="center  sorting_1">


                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Deletepost", new { id = post.id })">Refuse</a>

                                </td>
                            </tr>
                        </form>
                    }
                </table>
            </div>
        </div>

    </div>

</body>

