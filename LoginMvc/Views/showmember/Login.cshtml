@model List<LoginMvc.Models.Product>

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/go.cshtml";
}


<div class="container">


    <table class="table table-striped">
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Count</th>

        </tr>

        @foreach(var acount in Model)
        {
            <tr>
                <td>@acount.productId</td>
                <td>@acount.productName</td>
                <td>@acount.Price</td>
                <td>@acount.count</td>
                <td class="center  sorting_1">
                    <a href="@Url.Action("Delete", new { id = @acount.productId })">Delete</a>

                </td>
            </tr>
        }
    </table>
    
    <a href="~/addmember/addProduct">Add Product</a>
</div>

